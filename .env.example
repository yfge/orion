# Orion environment example

# Application
ORION_ENV=dev
ORION_DEBUG=true

# Database
ORION_DATABASE_URL=sqlite:///./orion.db

# MySQL example (uncomment and adjust):
# ORION_DATABASE_URL=mysql+pymysql://user:password@localhost:3306/orion?charset=utf8mb4

# Security
# ORION_SECRET_KEY=change-me

# CORS origins
# - Accepts '*' or comma-separated values or JSON array
# - Leave empty to use dev defaults (localhost:3000,3001)
# Examples:
# ORION_CORS_ORIGINS=*
# ORION_CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001
# ORION_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:3001","http://127.0.0.1:3001"]

# WeChat Official Account
# ORION_WECHAT_OFFICIAL_ACCOUNT__APP_ID=your-app-id
# ORION_WECHAT_OFFICIAL_ACCOUNT__APP_SECRET=your-app-secret
# ORION_WECHAT_OFFICIAL_ACCOUNT__TOKEN=your-callback-token
# ORION_WECHAT_OFFICIAL_ACCOUNT__ENCODING_AES_KEY=your-encoding-aes-key
# ORION_WECHAT_OFFICIAL_ACCOUNT__API__BASE_URL=https://api.weixin.qq.com
# ORION_WECHAT_OFFICIAL_ACCOUNT__API__TOKEN_TTL_SECONDS=7000
# ORION_WECHAT_OFFICIAL_ACCOUNT__RATE_LIMIT__REQUESTS_PER_MINUTE=400
# ORION_WECHAT_OFFICIAL_ACCOUNT__RATE_LIMIT__BURST_SIZE=40
# ORION_WECHAT_OFFICIAL_ACCOUNT__RETRY_POLICY__MAX_ATTEMPTS=3
# ORION_WECHAT_OFFICIAL_ACCOUNT__RETRY_POLICY__INITIAL_INTERVAL_SECONDS=0.5
# ORION_WECHAT_OFFICIAL_ACCOUNT__RETRY_POLICY__MAX_INTERVAL_SECONDS=30
# ORION_WECHAT_OFFICIAL_ACCOUNT__RETRY_POLICY__MULTIPLIER=2.0
# ORION_WECHAT_OFFICIAL_ACCOUNT__RETRY_POLICY__JITTER=0.1
# ORION_WECHAT_OFFICIAL_ACCOUNT__CIRCUIT_BREAKER__FAILURE_RATE_THRESHOLD=0.5
# ORION_WECHAT_OFFICIAL_ACCOUNT__CIRCUIT_BREAKER__RECOVERY_TIMEOUT_SECONDS=60
# ORION_WECHAT_OFFICIAL_ACCOUNT__CIRCUIT_BREAKER__MINIMUM_CALLS=20
# ORION_WECHAT_OFFICIAL_ACCOUNT__RETRYABLE_ERROR_CODES=[-1,45009,50002]
# ORION_WECHAT_OFFICIAL_ACCOUNT__NON_RETRYABLE_ERROR_CODES=[40001,40003,40037,41028,41029,42001,48001,48002]

